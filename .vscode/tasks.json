{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start Backend (Uvicorn)",
        "type": "shell",
        "command": "uvicorn main:app --reload",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "isBackground": true,
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": []
      },
      {
        "label": "Start Frontend (npm)",
        "type": "shell",
        "command": "npm start",
        "group": "build",
        "options": {
          "cwd": "${workspaceFolder}/frontend"
        },
        "problemMatcher": []
      }
    ]
  }
  